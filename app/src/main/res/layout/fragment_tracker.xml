<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:text="&lt;" />

        <TextView
            android:id="@+id/date"
            android:layout_width="348dp"
            android:layout_height="match_parent"
            android:textColor="#000000"
            android:background="#FFFFFF"
            android:gravity="center"
            android:textSize="22dp"
            android:textStyle="bold"
            android:text="TextView" />

        <Button
            android:layout_width="32dp"
            android:background="#FFFFFF"
            android:layout_height="wrap_content"
            android:text="&gt;" />

    </LinearLayout>


    <TextView
        android:id="@+id/breakfastTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="@string/breakfastTitle"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/breakfast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="TextView"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/breakfastButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Breakfast" />

    <TextView
        android:id="@+id/lunchTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="@string/lunchTitle"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/lunch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="TextView"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/lunchButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Lunch" />

    <TextView
        android:id="@+id/dinnerTitle"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dinnerTitle"
        android:textColor="#FFFFFF"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/dinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="TextView"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/dinnerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Dinner" />

    <TextView
        android:id="@+id/totalcalories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="left"
        android:text="Total Calories:" />


</LinearLayout>